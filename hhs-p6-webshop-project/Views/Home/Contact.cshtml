@model hhs_p6_webshop_project.Models.ContactModels
@{
    ViewData["Title"] = "Contact";

    ViewData["ShowHomeBanner"] = false;
    ViewData["BannerPath"] = "/images/mooi-meisje-2.jpg";
    ViewData["HomeBannerBgTitle"] = "Bruid";
    ViewData["HomeBannerSmallTitle"] = "Op zoek naar de perfecte jurk";
    ViewData["HomeBannerBoldTitle"] = "Van begin tot eind kunnen wij jou helpen.";
}

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <h2>Neem contact op</h2>
        @using (Html.BeginForm()) {
        <div class="form-horizontal">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.ValidationSummary(true)
            <div class="form-group">
                <label asp-for="@Model.Name" class="col-md-4 control-label"></label>
                <div class="col-md-8">
                    <input asp-for="@Model.Name" class="form-control" />
                    <span asp-validation-for="@Model.Name" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Phone" class="col-md-4 control-label"></label>
                <div class="col-md-8">
                    <input asp-for="@Model.Phone" class="form-control" />
                    <span asp-validation-for="@Model.Phone" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Email" class="col-md-4 control-label"></label>
                <div class="col-md-8">
                    <input asp-for="@Model.Email" class="form-control" />
                    <span asp-validation-for="@Model.Email" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Comment" class="col-md-4 control-label"></label>
                <div class="col-md-8">
                    <textarea asp-for="@Model.Comment" class="form-control"></textarea>
                    <span asp-validation-for="@Model.Comment" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Reference" class="col-md-4 control-label"></label>
                <div class="col-md-8">
                    <input asp-for="@Model.Reference" class="form-control" />
                    <span asp-validation-for="@Model.Reference" class="text-danger" />
                </div>
            </div>

            <div class="buttons">
                <div class="row">
                    <input class="btn" type="submit" value="submit" />
                    <input class="btn" type="reset" value="reset" />
                </div>
            </div>
        </div>
        }

    </div>
</div>
