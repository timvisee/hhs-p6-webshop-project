@using System.Collections.Generic
@model IEnumerable<hhs_p6_webshop_project.Models.ProductModels.ProductImage>

@{
    ViewData["Title"] = "Alle afbeeldingen";
}

<h2>Alle afbeeldingen</h2>

<p>
    <a asp-action="Create">Maak nieuwe aan</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Path)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ColorOption.Color)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Path)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ColorOption.Color)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProductImageId">Bewerk</a> |
                <a asp-action="Details" asp-route-id="@item.ProductImageId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ProductImageId">Verwijder</a>
            </td>
        </tr>
}
    </tbody>
</table>
