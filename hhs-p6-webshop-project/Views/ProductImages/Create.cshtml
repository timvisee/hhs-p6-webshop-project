@using Microsoft.AspNetCore.Mvc.Rendering
@model hhs_p6_webshop_project.Models.ProductModels.ProductImage

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<form asp-action="Create" enctype="multipart/form-data">
    <div class="form-horizontal">
        <h4>ProductImage</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="ColorOptionId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="ColorOptionId" asp-items="ViewBag.ColorOptionId"></select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Path" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input type="file" asp-for="Path" class="inputfile" accept="image/gif, image/jpeg, image/png" name="image" id="image"/>
                <label for="image" class="upload-image">Kies Afbeelding</label>
                <span asp-validation-for="Path" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <input name="again" type="checkbox" value="true" id="again">
                <label for="again">Nog een Foto toevoegen?</label>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Aanmaken" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Terug naar overzicht</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
