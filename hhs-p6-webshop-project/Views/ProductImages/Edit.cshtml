@using Microsoft.AspNetCore.Mvc.Rendering
@model hhs_p6_webshop_project.Models.ProductModels.ProductImage

@{
    ViewData["Title"] = "Bewerk afbeelding";
}

<h2>Bewerk afbeelding</h2>

<form asp-action="Edit" enctype="multipart/form-data">
    <div class="form-horizontal">
        <h4>ProductImage</h4>
        <hr/>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="ProductImageId"/>
        <div class="form-group">
            <label asp-for="ColorOptionId" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <select asp-for="ColorOptionId" asp-items="ViewBag.ColorOptionId"></select>
                <span asp-validation-for="ColorOptionId" class="text-danger"/>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Path" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input type="file" asp-for="Path" class="inputfile" accept="image/gif, image/jpeg, image/png" name="image" id="image"/>
                <label for="image" class="upload-image">Kies Afbeelding</label>
                <span asp-validation-for="Path" class="text-danger"/>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default"/>
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Terug naar overzicht</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}