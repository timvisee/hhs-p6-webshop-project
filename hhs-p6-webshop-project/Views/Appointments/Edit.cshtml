@using Microsoft.AspNetCore.Mvc.Rendering
@model hhs_p6_webshop_project.Models.AppointmentModels.Appointment

@{
    ViewData["Title"] = "Bewerk afspraak";
}

<h2>Afspraak</h2>



<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>Bewerk afspraak</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="ID" />
        <div class="form-group">
            <label asp-for="DateMarried" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="DateMarried" type="date" readonly class="form-control" />
                <span asp-validation-for="DateMarried" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="AppointmentDateTime" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="AppointmentDateTime" type="dateTime" class="form-control" />
                <span asp-validation-for="AppointmentDateTime" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Mail" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Mail" type="email" readonly class="form-control" />
                <span asp-validation-for="Mail" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Name" type="text" readonly class="form-control" />
                <span asp-validation-for="Name" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Phone" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Phone" type="tel" readonly class="form-control" />
                <span asp-validation-for="Phone" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="checkbox">
                    <input asp-for="Confirmation" />
                    <label asp-for="Confirmation"></label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Opslaan" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Terug naar overzicht</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
