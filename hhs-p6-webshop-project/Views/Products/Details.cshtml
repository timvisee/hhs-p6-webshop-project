@model hhs_p6_webshop_project.Models.ProductModels.Product
<link href="~/css/products.css" rel="stylesheet" />
@{
    ViewData["Title"] = Html.DisplayFor(model => model.Name);
    ViewData["PinkBackground"] = true;

    var ImagePath = "images/default.jpg";

    try {
        ImagePath = @Model.ProductTypes.FirstOrDefault().Images.FirstOrDefault().Path;
    } catch (Exception e) {
        // Tering harde beun maar het werkt echt perfect
    }
}

<div class="single-container">
    @if (User.Identity.IsAuthenticated) {
    <div>
        <a asp-action="Edit" asp-route-id="@Model.ProductId">Edit</a>
    </div>
    }
    <div class="row">
        <div class="back-to-dress-finder">
            <a asp-action="Index"><img src="/images/products/white-arrow-back.png" alt="<" />Terug naar overzicht</a>
        </div>
    </div>
    <div class="row">
        <div class="product-details">
            <div class="side-pictures">
                <div class="small-picture">
                    <img src="~/@ImagePath" alt="" />
                </div>
                <div class="small-picture">
                    <img src="~/@ImagePath" alt="" />
                </div>
                <div class="small-picture">
                    <img src="~/@ImagePath" alt="" />
                </div>
            </div>
            <div class="big-picture">
                <div class="vertical-align">
                    <div class="horizontal-align">
                        <img src="~/@ImagePath" alt="" />
                    </div>
                </div>
            </div>
            <div class="product-information-container">
                <div class="product-information">
                    <h4>@Html.DisplayFor(model => model.Name)</h4>
                    <span>artikel nr. 12294</span>
                    <div class="product-information-undertext">
                        <span>Trouwjurk van het merk Maggie Sottero gemaakt van kant. De top kan met- en zonder schouders gedragen worden. De jurk heeft een laag uitgesneden rug en een fishtail model met een sleep.</span>
                    </div>
                    <div class="product-information-attributes">
                        <p>
                            Merk:
                            <a asp-action="">Maggie Sottero</a>
                        </p>
                        <p>
                            Kenmerken:
                            <a asp-action="">Verleidelijk</a>,
                            <a asp-action="">Kant</a>,
                            <a asp-action="">Ivoor</a>,
                            <a asp-action="">Fishtail</a>,
                            <a asp-action="">Lage rug</a>,
                            <a asp-action="">Schouderbandjes</a>,
                            <a asp-action="">Strapless</a>
                        </p>
                        <p>
                            Prijsindicatie:
                            <span>&euro;7.500,-</span>
                        </p>
                        <p>
                            Beschikbare kleuren:
                            <div class="product-colors">
                                <div class="color-circle"></div>
                                <div class="color-circle hm-pink-dark"></div>
                                <div class="color-circle hm-pink-light"></div>
                            </div>
                        </p>
                        <div class="product-make-appointment-container">
                            <p>Kom deze jurk passen!</p>
                            <a asp-controller="Appointments" asp-action="Create" class="make-appointment">Pasafspraak maken</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="additions-container">
            <hr class="additions" />
            <span class="additions-text">Bijpassende sieraden</span>
        </div>
    </div>
    <div class="row">
        <div class="addition-images-wrapper">
            <div class="addition-item">
                <div class="addition-image">
                    <img src="~/images/uploads/addition-picture.jpg" alt="" />
                </div>
                <span>Abrazi</span>
            </div>
            <div class="addition-item">
                <div class="addition-image">
                    <img src="~/images/uploads/addition-picture.jpg" alt="" />
                </div>
                <span>Abrazi</span>
            </div>
            <div class="addition-item">
                <div class="addition-image">
                    <img src="~/images/uploads/addition-picture.jpg" alt="" />
                </div>
                <span>Abrazi</span>
            </div>
            <div class="addition-item">
                <div class="addition-image">
                    <img src="~/images/uploads/addition-picture.jpg" alt="" />
                </div>
                <span>Abrazi</span>
            </div>
            <a asp-action="Index" class="make-appointment">Bezoek de webshop</a>
        </div>
    </div>
    <div class="row">
        <div class="additions-container">
            <hr class="additions" />
            <span class="additions-text">Of zijn deze jurken meer iets voor jou?</span>
        </div>
    </div>
    <div class="row">
        <div class="addition-images-wrapper">
            <div class="addition-item">
                <div class="addition-image">
                    <img src="~/images/uploads/image-1.jpg" alt="" />
                </div>
                <span>Maggie Sottero</span>
            </div>
            <div class="addition-item">
                <div class="addition-image">
                    <img src="~/images/uploads/image-2.jpg" alt="" />
                </div>
                <span>Beautiful by Enzoani</span>
            </div>
            <div class="addition-item">
                <div class="addition-image">
                    <img src="~/images/uploads/image-3.jpg" alt="" />
                </div>
                <span>Ladybird</span>
            </div>
            <div class="addition-item">
                <div class="addition-image">
                    <img src="~/images/uploads/image-6.jpg" alt="" />
                </div>
                <span>Tres chic</span>
            </div>
        </div>
    </div>
</div>
