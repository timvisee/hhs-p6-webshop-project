@model IEnumerable<hhs_p6_webshop_project.Models.ProductModels.PropertyType>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Required)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Multiple)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AllowCustom)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @item.GetPropertyDataType()
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Required)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Multiple)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AllowCustom)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PropertyTypeId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PropertyTypeId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PropertyTypeId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
