@using Microsoft.AspNetCore.Mvc.Rendering
@model hhs_p6_webshop_project.Models.ProductModels.ColorOption

@{
    ViewData["Title"] = "Bewerk kleur";
}

<h2>Bewerk @Model.Color voor dit product</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <hr/>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="ColorOptionId"/>
        <div class="form-group">
            <label asp-for="Color" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="Color" asp-items="ViewBag.ColorOption"></select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ProductId" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <select asp-for="ProductId" asp-items="ViewBag.ProductId"></select>
                <span asp-validation-for="ProductId" class="text-danger"/>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default"/>
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Terug naar overzicht</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}