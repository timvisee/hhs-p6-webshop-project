@using System.Collections.Generic
@using Microsoft.AspNetCore.Mvc.Rendering
@model IEnumerable<hhs_p6_webshop_project.Models.ProductModels.ColorOption>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
