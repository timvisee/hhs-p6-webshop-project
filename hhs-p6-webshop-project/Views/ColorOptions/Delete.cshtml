@using Microsoft.AspNetCore.Mvc.Rendering
@model hhs_p6_webshop_project.Models.ProductModels.ColorOption

@{
    ViewData["Title"] = "Verwijder kleur";
}

<h2>Verwijder @Model.Color voor dit product</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Color)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Color)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <div class="form-actions no-color">
            <input type="submit" value="Verwijderen" class="btn btn-default" /> |
            <a asp-action="Index">Terug naar overzicht</a>
        </div>
    </form>
</div>
