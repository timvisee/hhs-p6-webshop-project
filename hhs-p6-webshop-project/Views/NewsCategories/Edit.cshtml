@model hhs_p6_webshop_project.Models.NewsModels.NewsCategoryView

@{
    ViewData["Title"] = "Blog - Bewerk " + @Model.NewsCategory.Name;
}


<h2>Bewerk @Model.NewsCategory.Name</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <hr/>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="@Model.NewsCategory.NewsCategoryID"/>
        <div class="form-group">
            <label asp-for="@Model.NewsCategory.Name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="@Model.NewsCategory.Name" class="form-control"/>
                <span asp-validation-for="@Model.NewsCategory.Name" class="text-danger"/>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="@Model.SelectedNewsArticles" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="@Model.SelectedNewsArticles" class="form-control" asp-items="@Model.NewsArticleList"></select>
                <span asp-validation-for="@Model.SelectedNewsArticles" class="text-danger"/>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default"/>
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Terug naar overzicht</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}